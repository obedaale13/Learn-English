<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="left|center"
    android:paddingTop="80dp"
    android:background="@drawable/back2"
    tools:context="com.example.admin.learnenglish.MainActivity">


    <Button
        android:id="@+id/btnGrammar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/btnStyle"
        android:text="Grammar" />

    <Button
        android:id="@+id/btnVocabulary"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        style="@style/btnStyle"
        android:text="Vocabulary"/>

    <Button
        android:id="@+id/btnPractise"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        style="@style/btnStyle"
        android:text="Practise"/>

    <Button
        android:id="@+id/btnAudioBooks"
        style="@style/btnStyle"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Audio Books"/>

    <Button
        android:id="@+id/btnEssay"
        style="@style/btnStyle"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Essay"/>

    <Button
        android:id="@+id/btnContactUs"
        style="@style/btnStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Go premium"/>

</LinearLayout>
